<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ldxx.xxbase.demo.activity.VolleyActivity">

    <include layout="@layout/xx_common_actionbar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="getPMValue"
        android:text="@string/btn_get_pm_value" />

    <TextView
        android:id="@+id/data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.ldxx.xxbase.view.JsonTextView
            android:id="@+id/data_json"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp" />
    </ScrollView>
</LinearLayout>
